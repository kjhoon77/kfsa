#include "LIB::training.js"; // 공통업무 관련

/* 공통 필수 시작 */
function Form_OnLoadCompleted(obj) {
    gfn_Form_OnLoadCompleted(obj); // 공통 폼 로딩 이벤트 처리

    if (length(sPersonNm) >= 1 || length(sTpMgno) >= 1) {
        lfn_search(obj); // 강습자 사진 조회
    }

}

function Form_OnKeyDown(obj,objSenderObj,nChar,bShift,bControl,bAlt,nLLParam,nHLParam) {
    // to do

    gfn_Form_OnKeyDown(obj,objSenderObj,nChar,bShift,bControl,bAlt,nLLParam,nHLParam); // 공통 키 이벤트 처리
}

function Form_OnSize(obj,nCx,nCy,nState) {
    if (gs_IsResizingForm == "Y") {
        gdImageInfo.Height = nCy - gdImageInfo.Top - 4;
    }
}

/*
 * 기능 : 조회
 */
function lfn_Search(obj) {
    ds_ioImageInfo.ClearData(); // 데이타셋 초기화

    tit_clearActionInfo();
	tit_addCsvSearchActionInfo("training:searchImageInfo", false);
	// 서버 호출 
	tit_callService(
		""
		,""
		,""	// inDs
		,"ds_ioImageInfo=ds_oImageInfo"	// outDs
		,"TPNM=" + quote(sPersonNm)
            + " IITPMGNO=" + quote(sTpMgno)
		,"lfn_AfterSearchImageInfo"
		,false
	);

}

/* 공통 필수 종료 */

/* 사용자 함수 */
/*
 * 기능 : 사진 조회 후 처리해야 할 내용
 * parameter : nErrorCode - 에러코드
 *             strErrorMsg - 에러메시지
 * Return : 없음
 */
function lfn_AfterSearchImageInfo(nErrorCode, strErrorMsg) {

    if (nErrorCode != 0) { // 트랜잭션 에러를 처리한다.
        gfn_ErrorMsg(nErrorCode, strErrorMsg);
        return;
    }

    gfn_SearchMessage(gdImageInfo); // 조회 메세지를 처리하고 그리드의 정렬 헤드 마크를 제거한다.
}

/* 사용자 이벤트 함수 */
function btnMutilSort_OnClick(obj) {

	gfn_GridMultiSort(gdImageInfo, 0); // 멀티 정렬을 실행한다.
}

function gdImageInfo_OnCellClick(obj,nRow,nCell,nX,nY,nPivotIndex) {

    var lobj_Dataset = object(obj.BindDataset);
	ds_ioImageInfo_OnRowPosChanged(lobj_Dataset,nRow,nRow);
}

function ds_ioImageInfo_OnRowPosChanged(obj,nOldRow,nRow) {

    // 그리드의 값을 입력란에 복사한다. 추가상태인 경우 복사 후 저장을 하기 위해 제외한다.
    if (nRow <> -1) {
        edRegGubun.Value = obj.GetColumn(nRow, "IIREGGUBUNNM");
        edPersonNm.Text = obj.GetColumn(nRow, "TPNM");
        edBirthday.Text = obj.GetColumn(nRow, "BIRTHDAY");
        radApproval.Value = obj.GetColumn(nRow, "IIAPPROVAL");
        imgPicture.ImageID = GF_FILE_SERVER_URL + "kems" + obj.GetColumn(nRow, "IIDIRPATH") + "/" + obj.GetColumn(nRow, "IIREALNM");
	}

}

function btnSelect_OnClick(obj) {

    if (ds_ioImageInfo.GetCount() < 1) {
        Close();
    }

    var arrArg = Array(3);
    arrArg[0] = ds_ioImageInfo.GetColumn(ds_ioImageInfo.currow, "IIIMGSEQ");
    arrArg[1] = ds_ioImageInfo.GetColumn(ds_ioImageInfo.currow, "IIDIRPATH");
    arrArg[2] = ds_ioImageInfo.GetColumn(ds_ioImageInfo.currow, "IIREALNM");
    Close(arrArg);
}]]></Script>

        gdMenuAuthUser.Height = nCy - gdMenuAuthUser.Top - 4;
    }
}

/*
 * 기능 : 조회
 */
function lfn_Search(obj) {
    ds_oMenuAuthUser.ClearData(); // 데이타셋 초기화

    tit_clearActionInfo();
	tit_addSearchActionInfo("sys:searchMenuAuthUser", false);
	// 서버 호출 
	tit_callService(
		""
		,""
		,""	// inDs
		,"ds_oMenuAuthUser=ds_oMenuAuthUser"	// outDs
		,"MSYSGUBUN=" + quote(cbxSysGubun.Value)	// args 
		,"lfn_AfterSearchMenuAuthUser"
		,false
	);
}
